{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "downlevelIteration": true
  },
  "include": [
    "./frontend/javascript/**/*",
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules"
  ],
  "vueCompilerOptions": {
    "extensions": [
      ".vue"
    ],
    "target": 3.3,
  }
}
